{
  "name": "lit-critic",
  "displayName": "lit-critic",
  "description": "Multi-lens editorial review system for fiction manuscripts",
  "version": "2.7.0",
  "publisher": "alexisargyris",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexisargyris/lit-critic.git",
    "directory": "vscode-extension"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:CANON.md"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "literaryCritic.analyze",
        "title": "lit-critic: Analyze Current Scene",
        "icon": "$(search)"
      },
      {
        "command": "literaryCritic.resume",
        "title": "lit-critic: Resume Session"
      },
      {
        "command": "literaryCritic.refreshSessions",
        "title": "lit-critic: Refresh Sessions",
        "icon": "$(refresh)"
      },
      {
        "command": "literaryCritic.viewSession",
        "title": "lit-critic: View Session Details"
      },
      {
        "command": "literaryCritic.deleteSession",
        "title": "lit-critic: Delete Session",
        "icon": "$(trash)"
      },
      {
        "command": "literaryCritic.refreshLearning",
        "title": "lit-critic: Refresh Learning Data",
        "icon": "$(refresh)"
      },
      {
        "command": "literaryCritic.exportLearning",
        "title": "lit-critic: Export Learning to LEARNING.md",
        "icon": "$(export)"
      },
      {
        "command": "literaryCritic.resetLearning",
        "title": "lit-critic: Reset All Learning Data",
        "icon": "$(clear-all)"
      },
      {
        "command": "literaryCritic.deleteLearningEntry",
        "title": "lit-critic: Delete Learning Entry",
        "icon": "$(trash)"
      },
      {
        "command": "literaryCritic.nextFinding",
        "title": "lit-critic: Next Finding"
      },
      {
        "command": "literaryCritic.acceptFinding",
        "title": "lit-critic: Accept Finding",
        "icon": "$(check)"
      },
      {
        "command": "literaryCritic.rejectFinding",
        "title": "lit-critic: Reject Finding",
        "icon": "$(close)"
      },
      {
        "command": "literaryCritic.discuss",
        "title": "lit-critic: Discuss Finding",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "literaryCritic.selectFinding",
        "title": "lit-critic: Select Finding"
      },
      {
        "command": "literaryCritic.reviewFinding",
        "title": "lit-critic: Review Current Finding"
      },
      {
        "command": "literaryCritic.clearSession",
        "title": "lit-critic: Clear Session"
      },
      {
        "command": "literaryCritic.rerunAnalysisWithUpdatedIndexes",
        "title": "lit-critic: Re-run Analysis with Updated Indexes"
      },
      {
        "command": "literaryCritic.selectModel",
        "title": "lit-critic: Change Analysis Model",
        "icon": "$(settings-gear)"
      },
      {
        "command": "literaryCritic.stopServer",
        "title": "lit-critic: Stop Server"
      }
    ],
    "configuration": {
      "title": "lit-critic",
      "properties": {
        "literaryCritic.repoPath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to the lit-critic installation directory (containing lit-critic-web.py). Required when opening a scene folder that is not inside the lit-critic repo."
        },
        "literaryCritic.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to Python interpreter"
        },
        "literaryCritic.serverPort": {
          "type": "number",
          "default": 8000,
          "description": "Port for the backend server"
        },
        "literaryCritic.analysisModel": {
          "type": "string",
          "default": "sonnet",
          "order": 40,
          "description": "Analysis model short name (required): used for lens analysis and coordinator. Tip: use command 'lit-critic: Change Analysis Model' for the current dynamic model list from backend /api/config."
        },
        "literaryCritic.discussionModel": {
          "type": "string",
          "default": "",
          "order": 41,
          "description": "Discussion model short name (optional): leave empty to use the analysis model. Any backend-known model is accepted."
        },
        "literaryCritic.lensPreset": {
          "type": "string",
          "default": "auto",
          "order": 42,
          "enum": [
            "auto",
            "balanced",
            "prose-first",
            "story-logic",
            "clarity-pass"
          ],
          "enumDescriptions": [
            "Automatically select based on scene count (recommended)",
            "Override: equal weight across all lenses",
            "Override: prioritize prose and style findings",
            "Override: prioritize structure and logic consistency",
            "Override: prioritize clarity and readability"
          ],
          "description": "Lens weighting preset. 'auto' selects the best preset based on scene count (single vs. multi-scene). Other values override auto-selection."
        },
        "literaryCritic.autoStartServer": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start the backend server on activation"
        },
        "literaryCritic.disableProblemDecorationColors": {
          "type": "boolean",
          "default": false,
          "description": "When enabled, lit-critic sets workspace setting workbench.editor.decorations.colors=false to reduce diagnostic color tinting in file/tab labels. Affects all diagnostics in this workspace."
        },
        "literaryCritic.disableProblemDecorationBadges": {
          "type": "boolean",
          "default": false,
          "description": "When enabled, lit-critic sets workspace setting workbench.editor.decorations.badges=false. Affects all diagnostics in this workspace."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lit-critic",
          "title": "lit-critic",
          "icon": "$(book)"
        }
      ]
    },
    "views": {
      "lit-critic": [
        {
          "id": "literaryCritic.sessions",
          "name": "Sessions"
        },
        {
          "id": "literaryCritic.findings",
          "name": "Findings"
        },
        {
          "id": "literaryCritic.learning",
          "name": "Learning"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "literaryCritic.deleteLearningEntry",
          "when": "view == literaryCritic.learning && viewItem == learningEntry",
          "group": "inline"
        }
      ],
      "view/title": [
        {
          "command": "literaryCritic.analyze",
          "when": "view == literaryCritic.sessions",
          "group": "navigation"
        },
        {
          "command": "literaryCritic.selectModel",
          "when": "view == literaryCritic.sessions",
          "group": "navigation"
        },
        {
          "command": "literaryCritic.refreshSessions",
          "when": "view == literaryCritic.sessions",
          "group": "navigation"
        },
        {
          "command": "literaryCritic.deleteSession",
          "when": "view == literaryCritic.sessions",
          "group": "navigation"
        },
        {
          "command": "literaryCritic.refreshLearning",
          "when": "view == literaryCritic.learning",
          "group": "navigation"
        },
        {
          "command": "literaryCritic.exportLearning",
          "when": "view == literaryCritic.learning",
          "group": "navigation"
        },
        {
          "command": "literaryCritic.resetLearning",
          "when": "view == literaryCritic.learning"
        }
      ],
      "editor/title": [
        {
          "command": "literaryCritic.analyze",
          "when": "resourceExtname == .txt",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "literaryCritic.analyze",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus"
      },
      {
        "command": "literaryCritic.nextFinding",
        "key": "ctrl+shift+]",
        "mac": "cmd+shift+]",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "npx @vscode/vsce package",
    "test": "mocha --exit --require ts-node/register \"../tests/vscode-extension/**/*.ts\""
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.33",
    "@types/proxyquire": "^1.3.31",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.0.0",
    "mocha": "^10.2.0",
    "proxyquire": "^2.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  }
}
